<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#202125"
    android:id="@+id/parent_layout">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#36373B"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewTestAPI"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:transitionName="pokemonImage_transition"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/textViewTestAPI"
        android:layout_margin="46dp"
        android:textSize="20dp"
        android:textColor="#AAA9A9"
        android:layout_toRightOf="@id/imageViewTestAPI"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textIdTestAPI"
        android:layout_margin="16dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>